{
    // Common settings
    "editor.renderWhitespace": "boundary",
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 4,
    // On save actions
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
    },
    // Language/extension specific settings
    "[javascript][typescript][html][handlebars]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
    },
    "[css]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[sql]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
    },
    "[dockercompose][dockerfile]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
}
