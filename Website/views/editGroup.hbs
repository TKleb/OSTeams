{{#if group}}
	{{#if isOwner}}
		<h1>Edit Group: {{title}}</h1>
		<form id="edit-group-form" method="post" action="/groups/edit/{{group.id}}">
			<label for="name">
				Name:
			</label>
			<input name="name" type="text" value="{{group.name}}" maxlength="50" required>
			<label for="description">
				Description:
			</label>
			<textarea name="description" maxlength="512" required>{{group.description}}</textarea>
			<label for="maxMemberCount">
				Group size:
			</label>
			<input name="maxMemberCount" type="number" value="{{group.max_member_count}}" min="2" max="99" required>
			<label for="applyByDate">
				Apply-By Date:
			</label>
			<input name="applyByDate" type="date" value="{{timestampToDate group.apply_by_date}}" required>
			<div class="overlay"></div>
			<div id="group-interaction-btns">
				<button id="edit-group-btn" class="grp-btn">Save Changes</button>
			</div>
		</form>
		<form method="get" action="/groups/{{group.id}}">
			<button class="back-btn">Cancel</button>
		</form>
	{{else}}
		<h1>You're not allowed to edit this group.</h1>
	{{/if}}
{{else}}
		<h1>Invalid Group.</h1>
{{/if}}
