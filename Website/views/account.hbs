<h1>Account</h1>
<div class="account-container">
	{{#if user}}
		<div class="display-info" id="account-info">
			{{#if edit}}
				<h3>EDIT</h3>
			{{else}}
				<div class="account-name">
					<p>Name:</p>
					{{#if_eq user.surname ''}}
						<p>No Name Saved</p>
					{{else}}
						<p>{{user.surname}} {{user.name}}</p>
					{{/if_eq}}
				</div>
				<div class="account-email">
					<p>Email:</p>
					<p>{{user.email}}</p>
				</div>
				<div class="account-fulltime">
					<p>Occupation:</p>
					{{#if_eq user.fulltime false}}
						<p>Part Time</p>
					{{/if_eq}}
					{{#if_eq user.fulltime null}}
						<p>No Info</p>
					{{else}}
						<p>Full Time</p>
					{{/if_eq}}
				</div>
				<div class="account-startyear">
					<p>Start Year:</p>
					{{#if_eq user.start_year null}}
						<p>Startyear not defined</p>
					{{else}}
						<p>{{user.start_year}}</p>
					{{/if_eq}}
				</div>
				<div class="account-info">
					<p>Info:</p>
					{{#if_eq user.custom_info ''}}
						<p>No Custom Info</p>
					{{else}}
						<p>{{user.custom_info}}</p>
					{{/if_eq}}
				</div>
			{{/if}}
		</div>
		<div class="profile-picture">
			{{#if_eq user.profile_picture_path null}}
				<img src="/images/default-pic.jpg">
			{{else}}
				<img src="{{profile_picture_path}}">
			{{/if_eq}}
		</div>
		<div class="account-interaction">
			<form method="get" action="/account/edit">
				<button type="submit" id="start-account-edit" class="center">Edit</button>
			</form>
		</div>
	{{else}}
		<h3>ERROR</h3>
	{{/if}}
</div>
<script type="text/javascript" src="/js/account-script.js" defer></script>
