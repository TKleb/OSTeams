{{#if group}}
	<div id="group-interaction-div">
		<h1>{{title}}</h1>
		<div id="group-interaction-btns">
			{{#if isVisitor}}
				<div class="modal" id="application-modal">
					<div class="modal-header">
						<div class="title">Group Application</div>
						<button data-close-button class="close-button">&times;</button>
					</div>
					<div class="modal-body">
						<form id="application-form" method="post" action="/groups/applyTo/{{group.id}}">
							<textarea id="application-text" name="description" maxlength="200" required placeholder="add a brief summary"></textarea>
							<button type="submit" class="submit-btn">Submit</button>
						</form>
					</div>
				</div>
				<button data-modal-target="#application-modal" class="grp-btn apply">Apply</button>
			{{else}}
				{{#if isOwner}}
				<form id="deleteGroup-form" method="post" action="/groups/delete/{{group.id}}">
					<button id="delete-group-btn">Delete</button>
				</form>
				{{else}}
				<form id="application-form" method="post" action="/groups/leave/{{group.id}}">
					<button id="leave-group-btn" {{#if isOwner}} disabled {{/if}}>Leave</button>
				</form>
				{{/if}}
			{{/if}}
		</div>
	</div>
	<div id="group-div">
		<div id="group-description">
			{{group.description}}
		</div>
		<div id="groupmember-list">
			{{group.owner}}
			<ul>
				{{#each members}}
					<li>{{email}}</li>
				{{/each}}
			</ul>
		</div>
		<div id="group-applications">
			<ul>
				{{#each applicants}}
					<li>{{id}} {{#if ../isOwner}} <button data-modal-target="#application-{{id}}-modal" class="view-application">View </button> {{/if}}</li>
				{{/each}}
			</ul>
		</div>

		{{#each applicants}}
			<div class="modal" id="application-{{id}}-modal">
				<div class="modal-header">
					<div class="title">View Application</div>
					<button data-close-button class="close-button">&times;</button>
				</div>
				<div class="modal-body">
					<form id="application-form" method="post" action="/groups/closeApplication/{{id}}/{{../group.id}}" >
						<input name="accept" type="radio" class="radio" id="accept-{{id}}" value="true" checked>
						<label for="radio-{{id}}">Accept</label>
						<input name="accept" type="radio" class="radio" id="deny-{{id}}" value="false">
						<label for="radio-{{id}}">Deny</label>
						<textarea name="description" id="group-application-description" disabled>{{text}}</textarea>
						<button type="submit" class="submit-btn">Submit</button>
					</form>
				</div>
			</div>
		{{/each}}
		<div class="overlay"></div>
	</div>
{{else}}
	<h1>NO GROUP</h1>
{{/if}}

