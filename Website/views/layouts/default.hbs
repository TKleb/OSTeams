<!doctype html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" type="text/css" href="/css/account-page.css">
	<link rel="stylesheet" type="text/css" href="/css/global.css">
	<link rel="stylesheet" type="text/css" href="/css/groupelements.css">
	<link rel="stylesheet" type="text/css" href="/css/login-and-registration.css">
	<link rel="stylesheet" type="text/css" href="/css/subjects.css">
	<script type="module" src="/js/script.js" defer></script>
	<title>OSTeams</title>
	{{#if dark}}
	<style>
		body {
			background: black;
			color: white;
		}
	</style>
	{{/if}}
</head>

<body>
	<div class="top">
		<div id="control-panel">
			<img src="/images/osteams.jpg" alt="osteams logo" id="logo">
			<a class="control-button" href="/">Home</a>
			<a class="control-button" href="/subjects">Subjects</a>
			<a class="control-button" href="/groups">Your Groups</a>
			<a class="control-button" id="account-page-link" href="/account">Account</a>
			{{#if session.loggedIn}}
				<a class="control-button" id="logout-page-link" href="/account/logout">Logout</a>
			{{else}}
				<a class="control-button" id="login-page-link" href="/account/login">Login</a>
			{{/if}}
		</div>
	</div>
	<div id="background">
		<div id="container">
			{{#if error}}
				<div class="notice error">
					<p>{{error}}</p>
				</div>
			{{else if hint}}
				<div class="notice hint">
					<p>{{hint}}</p>
				</div>
			{{else if success}}
				<div class="notice success">
					<p>{{success}}</p>
				</div>
			{{/if}}
			{{{body}}}
		</div>
	</div>
</body>

</html>
