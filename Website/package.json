{
    "name": "osteams",
    "version": "1.0.0",
    "description": "OSTeams Website",
    "main": "index.js",
    "scripts": {
        "start": "if-env NODE_ENV=development ?? npm run start:development || if-env NODE_ENV=test ?? npm run start:test || npm run start:production",
        "start:production": "node index.js",
        "start:development": "nodemon -L",
        "start:test": "npm run lint && npm run mocha_tests",
        "mocha_tests": "mocha tests/*.test.js  --timeout 5000",
        "eslint": "eslint . --ext .js",
        "stylelint": "stylelint \"**/*.css\"",
        "lint": "npm run eslint && npm run stylelint"
    },
    "type": "module",
    "author": "OSTeams",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-handlebars": "^5.3.3",
        "express-session": "^1.17.2",
        "jsdom": "^17.0.0",
        "nedb-promises": "^5.0.0",
        "node": "^16.13.2",
        "pg-promise": "^10.11.1",
        "sinon": "^11.1.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "eslint": "^8.12.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4",
        "mocha": "^9.2.2",
        "nodemon": "^2.0.15",
        "stylelint": "^14.6.1",
        "stylelint-config-standard": "^25.0.0"
    }
}