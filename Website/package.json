{
    "name": "osteams",
    "version": "1.0.0",
    "description": "OSTeams Website",
    "main": "index.js",
    "scripts": {
        "start": "if-env NODE_ENV=development ?? npm run start:development || if-env NODE_ENV=test ?? npm run start:test || npm run start:production",
        "start:production": "node index.js",
        "start:development": "nodemon -L",
        "start:test": "npm run lint && npm run mocha_tests",
        "mocha_tests": "c8 mocha tests/*.test.js --timeout 5000",
        "eslint": "eslint . --ext .js",
        "stylelint": "stylelint \"**/*.css\"",
        "lint": "npm run eslint && npm run stylelint"
    },
    "c8": {
        "reporter": [
            "text",
            "cobertura"
        ],
        "include": [
            "services/*.js",
            "controller/*.js"
        ],
        "all": true
    },
    "type": "module",
    "author": "OSTeams",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-handlebars": "^5.3.3",
        "express-session": "^1.17.2",
        "jsdom": "^17.0.0",
        "nedb-promises": "^5.0.0",
        "node": "^16.13.2",
        "nodemailer": "^6.7.3",
        "pg-promise": "^10.11.1",
        "rand-token": "^1.0.1",
        "sinon": "^11.1.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "babel-plugin-istanbul": "^6.1.1",
        "c8": "^7.11.2",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "eslint": "^8.12.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4",
        "mocha": "^9.2.2",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "stylelint": "^14.6.1",
        "stylelint-config-standard": "^25.0.0",
        "superagent": "^3.8.3",
        "supertest": "^6.2.3"
    }
}
