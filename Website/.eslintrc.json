{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "no-tabs": 0,
        "import/extensions": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false // Allows re-assignment of properties in dom if given as arguments
            }
        ],
        "import/prefer-default-export": "off",
        "class-methods-use-this": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "no-restricted-syntax": [
            "error",
            "ForInStatement"
        ],
        "no-console": [
            "off"
        ],
        "no-await-in-loop": [
            "off"
        ]
    }
}
